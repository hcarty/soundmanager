{
  "version": "2.0.0",
  "presentation": {
    "reveal": "silent",
    "revealProblems": "onProblem"
  },
  "type": "shell",
  "linux": {
    "options": {
      "cwd": "build/linux/gmake/",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build/linux/gmake/"
        ]
      }
    }
  },
  "osx": {
    "options": {
      "cwd": "build/mac/gmake/",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build/mac/gmake/"
        ]
      }
    }
  },
  "windows": {
    "options": {
      "cwd": "build/windows/gmake/",
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/build/windows/gmake/"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Refresh soundmanager project files",
      "group": "build",
      "type": "shell",
      "command": "./premake4",
      "windows": {
        "command": "premake4.exe gmake"
      },
      "options": {
        "cwd": "${workspaceFolder}/build/"
      }
    },
    {
      "label": "Build soundmanager (debug, profile, release, web)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build soundmanager (debug)",
        "Build soundmanager (profile)",
        "Build soundmanager (release)",
        "Build soundmanager (web)"
      ],
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build soundmanager (debug)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "linux": {
        "command": "make -j config=debug64"
      },
      "osx": {
        "command": "make -j config=debuguniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=debug64"
      }
    },
    {
      "label": "Build soundmanager (profile)",
      "group": "build",
      "type": "shell",
      "linux": {
        "command": "make -j config=profile64"
      },
      "osx": {
        "command": "make -j config=profileuniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=profile64"
      }
    },
    {
      "label": "Build soundmanager (release)",
      "group": "build",
      "type": "shell",
      "linux": {
        "command": "make -j config=release64"
      },
      "osx": {
        "command": "make -j config=releaseuniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=release64"
      }
    },
    {
      "label": "Build soundmanager (web)",
      "dependsOn": [
        "Build soundmanager (release)"
      ],
      "group": "build",
      "type": "shell",
      "command": "emmake make -j config=releaseweb"
    },
    {
      "label": "Run soundmanager (debug)",
      "dependsOn": [
        "Build soundmanager (debug)"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "type": "process",
      "command": "soundmanagerd",
      "windows": {
        "command": "soundmanagerd.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}/bin/"
      }
    },
    {
      "label": "Run soundmanager (profile)",
      "dependsOn": [
        "Build soundmanager (profile)"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "type": "process",
      "command": "soundmanagerp",
      "windows": {
        "command": "soundmanagerp.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}/bin/"
      }
    },
    {
      "label": "Run soundmanager (release)",
      "dependsOn": [
        "Build soundmanager (release)"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "type": "process",
      "command": "soundmanager",
      "windows": {
        "command": "soundmanager.exe"
      },
      "options": {
        "cwd": "${workspaceFolder}/bin/"
      }
    },
    {
      "label": "Run soundmanager (web)",
      "dependsOn": [
        "Build soundmanager (web)"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "type": "shell",
      "command": "emrun index.html",
      "options": {
        "cwd": "${workspaceFolder}/bin/web/"
      }
    }
  ]
}
